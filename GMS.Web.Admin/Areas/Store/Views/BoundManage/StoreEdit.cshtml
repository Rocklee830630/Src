@using GMS.Framework.Contract
@using GMS.Framework.Web.Controls
@using GMS.Store.Contract
@using GMS.Web
@model StoreWindowModel
@{
    Layout = "~/Views/Shared/_DictionaryLayout.Edit.cshtml";
}
@section PageSpecificJavascriptIncludes{
    <script type="text/javascript">
        function validate(num) {
            var reg = /^[0-9]+(.[0-9]{2})?$/;
            if (reg.test(num)) return true;
            return false;
        }
        $("#submit1").click(function () {
            $('#validtxt').text(" "); 
            if (!validate(number.value)) {
                $('#validtxt').text("入库数量必须是数字（两位小数）！");
                $('#validtxt').css('color', '#FF0000');
                return false;
            }
        });
    </script>
}
@section PageSpecificStyleSheetIncludes{
    <style type="text/css">
        .controls label {
            display: inline;
        }
    </style>
    <link href="/Content/zTree.theme.metro.css" rel="stylesheet" />
    <link href="/Content/zTree.theme.metro.css" rel="stylesheet" />
}
@section MainContent{

    <div class="portlet-body form-horizontal form-bordered form-row-stripped">
        <div class="row-fluid">
            <div class="control-group">
                <label class="control-label"><span class="required">*</span>客户名称：</label>
                <div class="controls">
                    @Html.TextBoxFor(m=>m.khmc, new { @readOnly = "readOnly", @class = "m-wrap large" })
                    @*<input id="khmc" type="text" disabled="disabled" value="" style="width:120px;" />*@
                </div>
            </div>
            <div class="control-group">
                <label class="control-label"><span class="required">*</span>订单类型：</label>
                <div class="controls">
                    @Html.TextBoxFor(m => m.ddlx, new { @readOnly = "readOnly", @class = "m-wrap large" })
                </div>
            </div>
            <div class="control-group">
                <label class="control-label"><span class="required">*</span>材料名称：</label>
                <div class="controls">
                    @Html.TextBoxFor(m => m.clmc, new { @readOnly = "readOnly", @class = "m-wrap large" })
                </div>
            </div>
            <div class="control-group">
                <label class="control-label"><span class="required">*</span>库存数量：</label>
                <div class="controls">
                   @Html.TextBoxFor(m => m.number, new { @class = "m-wrap large" })
                    （可精确到小数点后两位）
                   <span class="help-inline">@Html.ValidationMessageFor(m => m.number)</span>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">品名：</label>
                <div class="controls">
                    @Html.TextBoxFor(m => m.pm, new { @readOnly = "readOnly", @class = "m-wrap large" })
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">门幅：</label>
                <div class="controls">
                    @Html.TextBoxFor(m => m.mf, new { @readOnly = "readOnly", @class = "m-wrap large" })
                </div>
            </div>

            <div class="control-group">
                <label class="control-label">基数/米：</label>
                <div class="controls">
                   @Html.TextBoxFor(m => m.js, new { @readOnly = "readOnly", @class = "m-wrap large" })
                </div>
            </div>
        </div>
    </div>
<div style="height:100px;"></div>

<div class="form-actions navbar-fixed-bottom">
    <button type="submit" id="submit1" class="btn blue"><i class="icon-ok"></i> 提交</button>
    <span id="submitloading" style="display:none;"><img src='@Url.StaticFile("/content/images/loading.gif")' /></span>
    <button type="button" class="btn" id="cancel">取消</button>
    <span id="validtxt"></span>
</div>
}
